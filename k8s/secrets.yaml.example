# Create secret in cluster before first deploy:
# kubectl create secret generic whisker-lore-secrets -n work-apps \
#   --from-literal=CONVEX_URL=https://stoic-bird-564.convex.cloud \
#   --from-literal=LORE_API_KEY=your-api-key

apiVersion: v1
kind: Secret
metadata:
  name: whisker-lore-secrets
  namespace: work-apps
type: Opaque
stringData:
  CONVEX_URL: "https://your-deployment.convex.cloud"
  LORE_API_KEY: "your-secret-api-key"
