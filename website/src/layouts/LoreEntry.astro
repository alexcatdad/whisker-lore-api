---
import Base from "./Base.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import GearDivider from "../components/GearDivider.astro";
import CategoryIcon from "../components/CategoryIcon.astro";
import EntryHeaderGraphic from "../components/EntryHeaderGraphic.astro";

interface Props {
  title: string;
  category: string;
  tags: string[];
  updatedAt: string;
}

const { title, category, tags, updatedAt } = Astro.props;

const formattedDate = new Date(updatedAt).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Base title={title} description={`Learn about ${title} in The Whisker Shogunate lore.`}>
  <article class="entry" data-category={category}>
    <!-- Header -->
    <header class="entry__header">
      <EntryHeaderGraphic category={category} />
      <div class="entry__header-inner">
        <Breadcrumbs
          items={[
            { label: "Home", href: `${import.meta.env.BASE_URL}` },
            { label: "Categories", href: `${import.meta.env.BASE_URL}categories/` },
            { label: category, href: `${import.meta.env.BASE_URL}categories/${category}/` },
            { label: title },
          ]}
        />

        <div class="entry__title-section">
          <div class="entry__category-row">
            <CategoryIcon category={category} size={40} animate />
            <a href={`${import.meta.env.BASE_URL}categories/${category}/`} class="entry__category">
              {category}
            </a>
          </div>
          <h1 class="entry__title">{title}</h1>
          <time class="entry__date" datetime={updatedAt}>
            Updated {formattedDate}
          </time>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="entry__body">
      <div class="entry__layout">
        <main class="entry__content prose">
          <slot />
        </main>

        {tags.length > 0 && (
          <aside class="entry__sidebar">
            <div class="entry__tags-card">
              <h3 class="entry__tags-title">Related Tags</h3>
              <div class="entry__tags-list">
                {tags.map((tag) => (
                  <span class="entry__tag">{tag}</span>
                ))}
              </div>
            </div>
          </aside>
        )}
      </div>
    </div>

    <!-- Footer -->
    <footer class="entry__footer">
      <GearDivider />
      <div class="entry__nav">
        <a href={`${import.meta.env.BASE_URL}categories/${category}/`} class="entry__back">
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path fill="currentColor" d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/>
          </svg>
          Back to {category}
        </a>
      </div>
    </footer>
  </article>
</Base>

<style>
  .entry {
    min-height: 100vh;
  }

  /* Header */
  .entry__header {
    position: relative;
    background-color: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-8) var(--space-4) var(--space-12);
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .entry__header {
      padding: var(--space-10) var(--space-8) var(--space-16);
    }
  }

  .entry__header-inner {
    position: relative;
    max-width: var(--max-width-content);
    margin-inline: auto;
    z-index: 1;
  }

  .entry__title-section {
    margin-top: var(--space-8);
  }

  .entry__category-row {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .entry__category {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--category-color);
    text-decoration: none;
    padding: var(--space-2) var(--space-4);
    background-color: var(--category-bg);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-out-expo);
  }

  .entry__category:hover {
    background-color: var(--category-color);
    color: var(--color-bg-primary);
    text-decoration: none;
    transform: translateY(-1px);
  }

  .entry__title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 500;
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin: 0 0 var(--space-4) 0;
  }

  @media (min-width: 768px) {
    .entry__title {
      font-size: var(--text-5xl);
    }
  }

  .entry__date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  /* Body */
  .entry__body {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .entry__body {
      padding: var(--space-12) var(--space-8);
    }
  }

  .entry__layout {
    display: grid;
    gap: var(--space-12);
    max-width: var(--max-width-content);
    margin-inline: auto;
  }

  @media (min-width: 1024px) {
    .entry__layout {
      grid-template-columns: 1fr 280px;
      gap: var(--space-16);
    }
  }

  /* Content */
  .entry__content {
    max-width: var(--max-width-prose);
  }

  .entry__content :global(h2) {
    font-family: var(--font-display);
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--color-border);
  }

  .entry__content :global(h3) {
    margin-top: var(--space-10);
    margin-bottom: var(--space-3);
  }

  .entry__content :global(p:first-of-type) {
    font-size: var(--text-xl);
    color: var(--color-text-primary);
    line-height: var(--leading-relaxed);
  }

  .entry__content :global(ul),
  .entry__content :global(ol) {
    padding-left: var(--space-6);
  }

  .entry__content :global(li) {
    margin-bottom: var(--space-2);
  }

  .entry__content :global(li::marker) {
    color: var(--category-color);
  }

  /* Sidebar */
  .entry__sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  @media (min-width: 1024px) {
    .entry__sidebar {
      position: sticky;
      top: calc(var(--header-height) + var(--space-8));
      align-self: start;
    }
  }

  .entry__tags-card {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-5);
  }

  .entry__tags-title {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-tertiary);
    margin: 0 0 var(--space-4) 0;
  }

  .entry__tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .entry__tag {
    font-size: var(--text-sm);
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    color: var(--color-text-secondary);
    transition: all var(--duration-fast) var(--ease-out-expo);
  }

  .entry__tag:hover {
    background-color: var(--category-color);
    border-color: var(--category-color);
    color: var(--color-bg-primary);
  }

  /* Footer */
  .entry__footer {
    padding: 0 var(--space-4) var(--space-12);
  }

  @media (min-width: 768px) {
    .entry__footer {
      padding: 0 var(--space-8) var(--space-16);
    }
  }

  .entry__nav {
    max-width: var(--max-width-content);
    margin-inline: auto;
  }

  .entry__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: var(--space-3) var(--space-4);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-out-expo);
  }

  .entry__back:hover {
    color: var(--category-color);
    border-color: var(--category-color);
    text-decoration: none;
  }

  .entry__back svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
