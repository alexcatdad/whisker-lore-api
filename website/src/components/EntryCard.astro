---
import CategoryIcon from "./CategoryIcon.astro";

interface Props {
  title: string;
  category: string;
  slug: string;
  excerpt?: string;
  tags?: string[];
  featured?: boolean;
}

const { title, category, slug, excerpt, tags = [], featured = false } = Astro.props;
---

<a
  href={`${import.meta.env.BASE_URL}lore/${category}/${slug}/`}
  class:list={["entry-card", { "entry-card--featured": featured }]}
  data-category={category}
>
  <div class="entry-card__icon-bg">
    <CategoryIcon category={category} size={64} />
  </div>

  <div class="entry-card__header">
    <div class="entry-card__icon">
      <CategoryIcon category={category} size={24} animate />
    </div>
    <span class="entry-card__category">{category}</span>
    {featured && <span class="entry-card__badge">Featured</span>}
  </div>

  <h3 class="entry-card__title">{title}</h3>
  
  {excerpt && <p class="entry-card__excerpt">{excerpt}</p>}
  
  {tags.length > 0 && (
    <div class="entry-card__tags">
      {tags.slice(0, 3).map((tag) => (
        <span class="entry-card__tag">{tag}</span>
      ))}
      {tags.length > 3 && (
        <span class="entry-card__tag entry-card__tag--more">+{tags.length - 3}</span>
      )}
    </div>
  )}
  
  <div class="entry-card__footer">
    <span class="entry-card__link">
      Read more
      <svg viewBox="0 0 24 24" width="16" height="16" aria-hidden="true">
        <path fill="currentColor" d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
      </svg>
    </span>
  </div>
</a>

<style>
  .entry-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-5);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: inherit;
    height: 100%;
    transition: 
      transform var(--duration-normal) var(--ease-out-expo),
      box-shadow var(--duration-normal) var(--ease-out-expo),
      border-color var(--duration-normal) var(--ease-out-expo);
  }

  .entry-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--category-color) 0%,
      var(--category-color-muted) 100%
    );
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    opacity: 0;
    transition: opacity var(--duration-normal) var(--ease-out-expo);
  }

  .entry-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--category-color);
    text-decoration: none;
  }

  .entry-card:hover::before {
    opacity: 1;
  }

  .entry-card--featured {
    background: linear-gradient(
      135deg,
      var(--color-bg-elevated) 0%,
      var(--category-bg) 100%
    );
  }

  .entry-card--featured::before {
    opacity: 1;
  }

  /* Background Icon (decorative) */
  .entry-card__icon-bg {
    position: absolute;
    bottom: var(--space-4);
    right: var(--space-3);
    opacity: 0.08;
    transition: opacity var(--duration-normal) var(--ease-out-expo),
                transform var(--duration-slow) var(--ease-out-expo);
    pointer-events: none;
  }

  .entry-card:hover .entry-card__icon-bg {
    opacity: 0.15;
    transform: scale(1.1) rotate(-5deg);
  }

  .entry-card--featured .entry-card__icon-bg {
    opacity: 0.12;
  }

  /* Header Icon (prominent) */
  .entry-card__icon {
    flex-shrink: 0;
    transition: transform var(--duration-normal) var(--ease-out-back);
  }

  .entry-card:hover .entry-card__icon {
    transform: scale(1.15) rotate(5deg);
  }

  /* Header */
  .entry-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .entry-card__category {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--category-color);
  }

  .entry-card__badge {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-accent-primary);
    color: var(--color-text-inverse);
    border-radius: var(--radius-sm);
  }

  /* Title */
  .entry-card__title {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-3) 0;
    line-height: var(--leading-snug);
    transition: color var(--duration-fast) var(--ease-out-expo);
  }

  .entry-card:hover .entry-card__title {
    color: var(--category-color);
  }

  /* Excerpt */
  .entry-card__excerpt {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-4) 0;
    line-height: var(--leading-relaxed);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  /* Tags */
  .entry-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .entry-card__tag {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-bg-secondary);
    color: var(--color-text-tertiary);
    border-radius: var(--radius-md);
    transition: all var(--duration-fast) var(--ease-out-expo);
  }

  .entry-card:hover .entry-card__tag {
    background-color: var(--color-bg-tertiary);
  }

  .entry-card__tag--more {
    font-style: italic;
  }

  /* Footer */
  .entry-card__footer {
    margin-top: auto;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .entry-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--category-color);
    transition: gap var(--duration-fast) var(--ease-out-expo);
  }

  .entry-card:hover .entry-card__link {
    gap: var(--space-2);
  }

  .entry-card__link svg {
    width: 1rem;
    height: 1rem;
  }
</style>
