---
interface Props {
  category: string;
  size?: "sm" | "md";
  linked?: boolean;
}

const { category, size = "md", linked = true } = Astro.props;
const _href = `${import.meta.env.BASE_URL}categories/${category}/`;
---

{linked ? (
  <a href={href} class:list={["category-badge", `category-badge--${size}`]} data-category={category}>
    {category}
  </a>
) : (
  <span class:list={["category-badge", `category-badge--${size}`]} data-category={category}>
    {category}
  </span>
)}

<style>
  .category-badge {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-cream-dark);
    color: var(--category-color, var(--color-brass));
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  a.category-badge:hover {
    background-color: var(--category-color, var(--color-brass));
    color: var(--color-cream);
    text-decoration: none;
  }

  .category-badge--sm {
    font-size: 0.65rem;
    padding: 0.125rem var(--space-1);
  }
</style>
