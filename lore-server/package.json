{
  "name": "@whisker/lore-server",
  "version": "0.3.0",
  "description": "MCP server for Whisker Shogunate lore semantic search",
  "type": "module",
  "scripts": {
    "start": "bun src/api-server.ts",
    "dev": "bun --watch src/api-server.ts",
    "test": "bun test",
    "import": "bun src/import.ts",
    "re-embed": "bun src/re-embed.ts",
    "generate-flora": "bun src/flora-generator/index.ts",
    "generate-flora:resume": "bun src/flora-generator/index.ts --resume",
    "generate-flora:test": "bun src/flora-generator/index.ts --test",
    "generate-flora:clear": "bun src/flora-generator/index.ts --clear",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/eden": "^1.4.6",
    "@elysiajs/swagger": "^1.3.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "convex": "^1.21.0",
    "elysia": "^1.4.22",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "bun-types": "^1.3.6",
    "typescript": "^5.9.3"
  }
}
